  "build": {
    "productName": "MagiScrita",
    "executableName": "MagicInstaller",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json",
      "src/database/migrations"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "appId": "com.github.JPDovale.ms-desktop",
      "target": [
        "nsis"
      ],
      "fileAssociations": [
        {
          "ext": "ocurredmagic",
          "icon": "assets/fileicon.png"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "license": "assets/eula.txt"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "fileAssociations": [
        {
          "ext": "ocurredmagic",
          "icon": "assets/fileicon.png"
        }
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build/${version}"
    },
    "extraResources": [
      "./assets/**"
    ]
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**",
      "src/config/**",
      "src/database/**",
      "src/modules/**",
      "src/providers/**",
      "src/shared/**",
      "src/utils/**"
    ],
    "logLevel": "quiet"
  }
}
